extends ../layout
block header
	nav.segmented-control
		a.control-item.active(href="/") Home
		a.control-item(href="#{getUrl('game.highscore')}") Highscore
		a.control-item(href="#{getUrl('users.logout')}") Logout
block content
	.card
		#join-message
		form(method="post", action="#{getUrl('game.join')}", data-socket="true", rel="#join-message", redirect="#{getUrl('game.start')}")
			input(type='text', placeholder='Enter Game ID', name="game_id", autocomplete="off")
			button.btn.btn-positive.btn-block Join
		p Or Start New Game
		a.btn.btn-positive.btn-block(href="#{getUrl('game.start')}") Start
		