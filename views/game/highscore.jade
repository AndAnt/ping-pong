extends ../layout
block header
	nav.segmented-control
		a.control-item(href="/") Home
		a.control-item(href="#{getUrl('game.start')}") New Game
		a.control-item.active(href="#{getUrl('game.highscore')}") Highscore
		a.control-item(href="#{getUrl('users.logout')}") Logout
block content
	.highscore
		ul.table-view
			each user in highscore
				li.table-view-cell #{ user.winner }
					span.badge #{ user.time }ms
