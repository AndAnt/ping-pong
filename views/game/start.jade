extends ../layout
block header
	nav.segmented-control
		a.control-item(href="/") Home
		a.control-item(href="#{getUrl('game.start')}") New Game
		a.control-item(href="#{getUrl('game.highscore')}") Highscore
		a.control-item(href="#{getUrl('users.logout')}") Logout
block content
	.time
		.you
			span you
			.progressbar

		.opponent
			span opponent
			.progressbar
	.game-desdrition
		p#game-desdrition-header Game ID
		p#game-desdrition-body=game
	#message-box
		#message
	.ping-pong
		.ping
		.pong
	.addHightScores
		#add-message
		form(method="post", action="#{getUrl('game.addHighscore')}", data-socket="true", rel="#add-message", redirect="#{getUrl('game.highscore')}")
			input#time(type="hidden", name='time')
			button.btn.btn-positive.btn-block Add name on Hight Score list
	script startGame();